@{
    Layout = null;
}
<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/css/paymentKawaii.css"  type="text/css">
    <link rel="stylesheet" href="~/css/fonts.css"  type="text/css">
    <link rel="stylesheet" href="~/css/sidebar.css"  type="text/css">
    <script src="animate.js"></script>


    <title>Kittens - Payment</title>
</head>
<body>
    <div id="outer-grid">
        <!-- Sidebar -->
        <div id="outer-side">
            <div id="sidebar-top">
                <p class="sidebar-title">(Kittens!)</p>
            </div>
            <div id="sidebar-mid">
                <ul>
                    <li><a asp-route="home">~  Home  ~</a></li>
                    <li><a asp-route="cart">~  Cart  ~</a></li>
                    <li><a asp-route="user">~  Profile ~</a></li>
                </ul>
            </div>
            <div id="sidebar-bot">
                <p>Powered by cuteness</p>
            </div>
        </div>

        <!-- Main Page -->
        <div id="main">

            <!--Payment Box-->
            <div id="payment-box">
                <div class="box-title-bar">
                    <div class="box-title-text">Payment</div>
                    <div class="box-title-deco"></div>
                </div>
                <div id="box-content-wrapper">
                    <div class="logo">
                        <p class="sidebar-title">(Kittens!)</p>
                    </div>


                    <form id="payment" method="post" asp-controller="Payment" asp-action="Checkout">
                        <input type="text" name="payment-cardholder" placeholder="Full name" class="field">
                        <div id="payment-cvv-row">
                            <input type="text" name="payment-card-number" placeholder="Card number" class="field">
                            <input type="text" name="payment-cvv" placeholder="CVV" class="field">
                        </div>
                        <input type="password" name="expiration" placeholder="Expiration" class="field">
                        <div class="payment-bottom-row">
                            <input type="submit" name="confirm" value="Confirm" class="btn">
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>